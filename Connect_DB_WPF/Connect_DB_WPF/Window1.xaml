<Window x:Class="Connect_DB_WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect_DB_WPF"
        mc:Ignorable="d"
        Title="Window1" Height="154" Width="229">
    <Grid Margin="0,0,0,1">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Margin="10,24,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,52,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_user" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="78,23,0,0"/>
        <TextBox x:Name="tb_pswd" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="78,51,0,0"/>
        <Button x:Name="bt_apply" Content="Apply" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="21,84,0,0" Click="bt_apply_Click"/>
        <Button x:Name="bt_cancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Margin="117,84,0,0" Click="bt_cancel_Click"/>
    </Grid>
</Window>

<Window x:Class="Connect_DB_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect_DB_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Padding="5">
        <StackPanel>
            <DataGrid ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" x:Name="dg_test" Height="222"/>
            <Button Content="Save" x:Name="bt_save" Margin="0,5,730,0" Click="bt_save_Click"/>
            <Button x:Name="bt_insert" Content="Insert" Margin="0,5,730,0" Click="bt_insert_Click"/>
            <Button x:Name="bt_delete" Content="Delete" Margin="0,5,730,0" Click="bt_delete_Click"/>
            <Button x:Name="bt_refresh" Content="Refresh" Margin="0,5,730,0" Click="bt_refresh_Click"/>
            <TextBlock x:Name="tb_test" Padding="2"/>
        </StackPanel>
    </Border>
</Window>
